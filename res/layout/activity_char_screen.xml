                android:layout_height="wrap_content"
                android:background="@color/Blue"
                android:orientation="vertical"
                android:paddingLeft="20dp" >

                <TextView
                    android:id="@+id/personaEffect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Effect" />

