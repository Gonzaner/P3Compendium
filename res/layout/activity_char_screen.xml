            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/personaEn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="En" />

                <TextView
                    android:id="@+id/personaEnShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
