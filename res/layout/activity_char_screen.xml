<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/ctec.p3compendium.controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:minHeight="300"
        android:minWidth="300" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="75"
            android:minWidth="75" >

            <TextView
                android:id="@+id/personaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Persona" />

            <TextView
                android:id="@+id/personaLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level" />

            <TextView
                android:id="@+id/personaSt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="St" />

            <TextView
                android:id="@+id/personaMa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ma" />

            <TextView
                android:id="@+id/personaEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En" />

            <TextView
                android:id="@+id/personaAg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ag" />

            <TextView
                android:id="@+id/personaLu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lu" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="75"
            android:minWidth="75" >

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="75"
            android:minWidth="75" >

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="75"
            android:minWidth="75" >

        </TableRow>
    </TableLayout>

</RelativeLayout>